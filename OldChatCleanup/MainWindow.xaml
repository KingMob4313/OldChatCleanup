<Window x:Class="OldChatCleanup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OldChatCleanup"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="409"  x:Name="ChatContentTextBox" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="NoWrap"  VerticalAlignment="Top" Width="772" Margin="10,150,0,0" />
        <Button Content="Open File" x:Name="OpenFileButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="21,13,0,0" Click="OpenFileButton_Click"/>
        <TextBox HorizontalAlignment="Left" Height="23" x:Name="FileNameTextBox"  TextWrapping="Wrap" VerticalAlignment="Top" Width="362" Margin="101,10,0,0"/>
        <ListBox HorizontalAlignment="Left" Height="132" VerticalAlignment="Top" x:Name="NameListBox" Width="314" Margin="468,13,0,0"/>
        <Button Content="Process Chat File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="117" Margin="21,114,0,0" Click="Button_Click"/>

    </Grid>
</Window>
